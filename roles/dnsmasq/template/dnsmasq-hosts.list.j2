{% for host in hostvars %}
{%  if host.ansible_all_ipv4_addresses is defined %}
{%   for ip_address in host.ansible_all_ipv4_addresses %}
{{ host.ip_address }} {{ host.inventory_hostname }} {{ host.inventory_hostname_short }}
{%   endfor %}
{%  if host.ansible_all_ipv6_addresses is defined %}
{%   for ip_address in host.ansible_all_ipv6_addresses %}
{{ host.ip_address }} {{ host.inventory_hostname }} {{ host.inventory_hostname_short }}
{%   endfor %}
{%  endif %}
{% endfor %}
